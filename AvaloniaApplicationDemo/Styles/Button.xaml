<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Height="100" Width="100">
      <Button Classes="leftbutton" HorizontalAlignment="Center"/>
    </Border>
  </Design.PreviewWith>

  <Style Selector="Button.leftbutton">
    <Setter Property="Margin" Value="0 5 0 5"/>
    <Setter Property="Width" Value="50"/>
    <Setter Property="Height" Value="50"/>
    <Setter Property="IsEnabled" Value="False"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Background" Value="Transparent"/>
    <!--<Setter Property="Padding" Value="6"/>-->
  </Style>
  <Style Selector="Button.leftbutton /template/ ContentPresenter">
    <Setter Property="CornerRadius" Value="100"/>
    <Setter Property="BorderBrush" Value="1"/>
  </Style>
  <!--<Style Selector="Button:pointerover.leftbutton /template/ ContentPresenter">
    <Setter Property="Background" Value="#80e0e0e0"/>
  </Style>-->
  
</Styles>
